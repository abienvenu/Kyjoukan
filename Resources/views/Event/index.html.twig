{% extends "KyjoukanBundle::layout.html.twig" %}

{% block body %}
	<h1>{{ event.name }}</h1>
	Phases :
	<ul>
		{% for phase in event.phases %}
			<li><a href="{{ path('abienvenu_kyjoukan_phase_index', {'slug_event': event.slug, 'slug': phase.slug}) }}">{{ phase.name }}</a></li>
		{% endfor %}
	</ul>
	Teams :
	<ul>
		{% for team in event.teams %}
			<li>{{ team.name }}</li>
		{% endfor %}
	</ul>
	Grounds :
	<ul>
		{% for ground in event.grounds %}
			<li>{{ ground.name }}</li>
		{% endfor %}
	</ul>
{% endblock %}
